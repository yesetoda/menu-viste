    {
      "name": "Webhooks (Testing)",
      "item": [
        {
          "name": "Chapa Webhook (Actual)",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "// Automatically generate HMAC-SHA256 signature for Chapa Webhook",
                  "const secret = pm.collectionVariables.get(\"chapa_webhook_secret\");",
                  "if (secret) {",
                  "    const body = pm.request.body.raw;",
                  "    const hash = CryptoJS.HmacSHA256(body, secret).toString();",
                  "    pm.collectionVariables.set(\"chapa_signature\", hash);",
                  "    console.log(\"Generated Chapa-Signature: \", hash);",
                  "} else {",
                  "    console.warn(\"CHAPA_WEBHOOK_SECRET not set in collection variables\");",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Chapa-Signature",
                "value": "{{chapa_signature}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"event\": \"payment.success\",\n    \"data\": {\n        \"status\": \"completed\",\n        \"first_name\": \"John\",\n        \"last_name\": \"Doe\",\n        \"email\": \"owner@example.com\",\n        \"amount\": \"19.99\",\n        \"currency\": \"ETB\",\n        \"tx_ref\": \"{{tx_ref}}\",\n        \"reference\": \"ref_123456789\"\n    }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/payment/chapa/webhook",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "payment", "chapa", "webhook"]
            }
